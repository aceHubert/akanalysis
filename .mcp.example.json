{
  "mcpServers": {
    "mcp-aktools": {
      "command": "uvx",
      "args": ["mcp-aktools"],
      "env": {
        "OKX_BASE_URL": "${OKX_BASE_URL:-https://okx.4url.cn}",
        "BINANCE_BASE_URL": "${BINANCE_BASE_URL:-https://bian.4url.cn}"
      }
    },
    "mcp-notify": {
      "command": "uvx",
      "args": ["mcp-notify"],
      "env": {
        "FEISHU_BOT_KEY": "${FEISHU_BOT_KEY:-}"       
      }
    }
  }
}
